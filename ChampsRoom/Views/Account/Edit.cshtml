@model ChampsRoom.Models.UserEditViewModel

<div class="row text-center">
    <h1>Edit</h1>
    <p class="lead">Update your information</p>
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()    
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="username" placeholder="Name" value="@Model.UserName" />
        </div>
    </div>
    
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Image Url</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="imageurl" placeholder="http://@Request.Url.Host/profile.png" value="@Model.ImageUrl" />
        </div>
    </div>    
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
}
